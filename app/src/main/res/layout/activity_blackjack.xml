<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

	<view
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		class="edu.csulb.android.blackjack.Game.BlackjackView"
		android:id="@+id/blackjack"/>

	<ImageButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/deal"
		android:src="@drawable/deal"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"/>

	<ImageButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/hit"
		android:src="@drawable/hit"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"/>

	<ImageButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/stand"
		android:src="@drawable/stand"
		android:layout_alignParentBottom="true"
		android:layout_toRightOf="@+id/hit"
		android:layout_toEndOf="@+id/hit"/>

</RelativeLayout>